                %a(href="https://github.com/hriener/lorina" target="_blank")
                  %img#lorina(src="https://cdn.rawgit.com/hriener/lorina/master/lorina.svg")
                %a(href="https://github.com/lsils/mockturtle" target="_blank")
                  %img#mockturtle(src="https://cdn.rawgit.com/lsils/mockturtle/master/mockturtle.svg")
                %a(href="https://github.com/whaaswijk/percy" target="_blank")
                  %img#percy(src="https://cdn.rawgit.com/whaaswijk/percy/master/percy.svg")
                %a(href="https://github.com/boschmitt/tweedledum" target="_blank")
                  %img#tweedledum(src="https://cdn.rawgit.com/boschmitt/tweedledum/master/tweedledum.svg")
                %img#epfl(src="https://upload.wikimedia.org/wikipedia/commons/f/f4/Logo_EPFL.svg")
